APP_NAME="SIMPEL Landasan Ulin"
APP_ENV=local
APP_KEY=base64:ZqiQ6jSiaJdyG5tBYa64dbnC0k+Ey4bL0ezgX8z53ys=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ─────────────────────────────────────────────
# Database — koneksi ke MySQL lokal (host machine)
# host.docker.internal = IP host machine dari dalam container
# ─────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=host.docker.internal
DB_PORT=3306
DB_DATABASE=db_simpel
DB_USERNAME=root
DB_PASSWORD=

# ─────────────────────────────────────────────
# Cache, Session & Queue — pakai Redis
# ─────────────────────────────────────────────
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# ─────────────────────────────────────────────
# Redis — pakai service "redis" di Docker network
# ─────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ─────────────────────────────────────────────
# Custom Port Mapping — sesuaikan jika bentrok dengan container lain
# ─────────────────────────────────────────────
APP_PORT=8080             # Port akses aplikasi (Nginx)
REDIS_EXPOSE_PORT=6380    # Port Redis di-expose ke host
MAILPIT_SMTP_PORT=1025    # SMTP Mailpit
MAILPIT_UI_PORT=8025      # Web UI Mailpit

# ─────────────────────────────────────────────
# Storage — MinIO Server Eksternal (S3-compatible)
# Hostname/IP server MinIO yang terpisah
# ─────────────────────────────────────────────
FILESYSTEM_DISK=minio

MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=simpel
MINIO_URL=http://ip-server-minio:9000          # URL publik MinIO (dari browser)
MINIO_ENDPOINT=http://ip-server-minio:9000     # Endpoint dari dalam container

# AWS/S3 vars (digunakan Laravel S3 driver → MinIO)
AWS_ACCESS_KEY_ID=your_minio_access_key
AWS_SECRET_ACCESS_KEY=your_minio_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=simpel
AWS_ENDPOINT=http://ip-server-minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# ─────────────────────────────────────────────
# Mail — Mailpit (local SMTP testing)
# ─────────────────────────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@simpel-landasanulin.id"
MAIL_FROM_NAME="${APP_NAME}"

# ─────────────────────────────────────────────
# WhatsApp Notification (existing config)
# ─────────────────────────────────────────────
WA_API_URL=http://wa.banjarbaru-bagawi.id/send-message
